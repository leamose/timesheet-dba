<target name="N65540" description="MJColaborador.jar">
<mkdir dir="dist"/>
	<manifest file="MANIFEST.MF" mode="replace">
		<attribute name="Deploy-Priority" value="450" />	
		<attribute name="Created-By" value="Ministerio da Justica - CGTI/DIPROS" />	
		<attribute name="build-time" value="${build.time}" />	  	
		<attribute name="build-version" value="${build.version}" />	  	
	</manifest>   
	
<jar destfile="dist/MJColaborador.jar" manifest="MANIFEST.MF">
<zipfileset dir="bin" includes="**/*.*" excludes="**/testes/* **/jndi.properties"/>
</jar>
</target>
	
