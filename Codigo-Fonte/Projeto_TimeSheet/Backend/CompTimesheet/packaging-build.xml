<zipfileset dir="bin" includes="**/pojo/**/*.class **/servicos/**/*.class **/ejb/**/*.class  **/exceptions/*.class **/dominios/*.class **/dominios/**/*.properties" excludes="**/pojo/**/*DAO.* **/ejb/**/Abstract*Facade.class **/ejb/**/*FacadeSession.class"/>
</jar>
	<!-- Apaga o manifest -->    	
	<delete file="MANIFEST.MF" />
