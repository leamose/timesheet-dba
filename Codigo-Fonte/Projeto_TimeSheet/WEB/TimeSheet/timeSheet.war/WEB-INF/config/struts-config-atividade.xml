<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
		<form-bean name="atividadeForm" type="br.com.dba.timesheet.web.form.AtividadesForm" />        
    </form-beans>

    <action-mappings>
    		
	    <action path="/atividade/inicio" 
				type="br.com.dba.timesheet.web.action.AtividadesAction"
				name="atividadeForm" 
				input="/WebContent/jsp/index.html">
			<forward name="cadastro" path="/WebContent/jsp/atividades/index.jsp"/>
		</action>
	    <action path="/atividade/cadastrarAtividade" 
				type="br.com.dba.timesheet.web.action.AtividadesAction"
				name="atividadeForm" 
				input="/WebContent/jsp/index.html">
			<forward name="retornoCadastro" path="/WebContent/jsp/cadastroAtividades/cadastroAtividades.jsp"/>
		</action>
	    
	    <action path="/atividade/detalhar" 
				type="br.com.dba.timesheet.web.action.AtividadesAction"
				name="atividadeForm" 
				input="/WebContent/jsp/index.html">
			<forward name="retornoDetalhar" path="/WebContent/jsp/cadastroAtividades/cadastroAtividades.jsp"/>
		</action>
	    
	    <action path="/atividade/alterar" 
				type="br.com.dba.timesheet.web.action.AtividadesAction"
				name="atividadeForm" 
				input="/WebContent/jsp/index.html">
			<forward name="retornoAlterar" path="/WebContent/jsp/cadastroAtividades/cadastroAtividades.jsp"/>
		</action>
	    
	    <action path="/atividade/excluir" 
				type="br.com.dba.timesheet.web.action.AtividadesAction"
				name="atividadeForm" 
				input="/WebContent/jsp/index.html">
			<forward name="retornoCadastro" path="/WebContent/jsp/cadastroAtividades/cadastroAtividades.jsp"/>
		</action>
		
	    <action path="/atividade/salvar" 
				type="br.com.dba.timesheet.web.action.AtividadesAction"
				name="atividadeForm" 
				input="/WebContent/jsp/index.html">
			<forward name="retornoSalvar" path="/atividade/inicio.do"/>
		</action>
	    <action path="/atividade/voltar" 
				type="br.com.dba.timesheet.web.action.AtividadesAction"
				name="atividadeForm" 
				input="/WebContent/jsp/index.html">
			<forward name="voltar" path="/atividade/inicio.do"/>
		</action>

	</action-mappings>	
	
</struts-config>