<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
		<form-bean name="loginForm" type="br.com.dba.timesheet.web.form.LoginForm" />
    </form-beans>

    <action-mappings>    
		<!-- redireciona para o template da pï¿½gina inicial -->
		<action path="/login" 
			type="br.com.dba.timesheet.web.action.LoginAction"
			name="loginForm">
			<forward name="logar" path="/login.jsp"/>
		</action>		
		
		<action path="/inicio/logar" 
			type="br.com.dba.timesheet.web.action.LoginAction"
			name="loginForm">
			<forward name="index" path="/atividade/inicio.do"/>
		</action>
	</action-mappings>
	
	<!--
		=================================================== Validator plugin
	-->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
            value="/org/apache/struts/validator/validator-rules.xml, /WEB-INF/config/validation.xml"/>
        <set-property property="stopOnFirstError" value="false"/>
    </plug-in>
    
    <!-- 
		======================================================= Tiles plugin
	-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/config/tiles-defs.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>
	    
</struts-config>